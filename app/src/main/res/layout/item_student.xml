<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_student"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selection_color"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_student"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_tag_faces"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_toRightOf="@+id/iv_student"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:text="type: "
            android:layout_marginRight="6dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date of birth"
            android:layout_toRightOf="@+id/iv_student"

            android:layout_below="@+id/tv_name"/>

        <TextView
            android:id="@+id/tv_doj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date of admission"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_below="@+id/tv_type"/>

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mobile"
            android:layout_toRightOf="@+id/iv_student"
            android:layout_marginRight="6dp"
            android:layout_below="@+id/tv_dob"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>